<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Home"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Today&apos;s Hottest Event!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/maroon5" />

    <RelativeLayout
        android:id="@+id/event_frame1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/category_button"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="event1" >

        <TextView
            android:id="@+id/event_name1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_region1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="7dp"
            android:text="123"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView android:id="@+id/imageView1" android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:src="@drawable/locator" />

        <TextView
            android:id="@+id/event_region1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_time"
            android:layout_toRightOf="@+id/head"
            android:padding="7dp"
            android:text="123"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_region1"
            android:layout_below="@+id/event_name1"
            android:padding="7dp"
            android:text=" 01"
            android:textColor="#ff1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/event_time"
            android:layout_alignBottom="@+id/event_time"
            android:layout_toRightOf="@+id/event_time"
            android:padding="7dp"
            android:text=" 01"
            android:textColor="#ff1"
            android:textSize="12sp" />

    </RelativeLayout>


  
</LinearLayout> 